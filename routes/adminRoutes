const express = require('express');
const router = express.Router();
const { protect, adminOnly } = require('../middleware/auth');
const adminController = require('../controllers/adminController');

// Existing routes
router.get('/users', protect, adminOnly, adminController.getAllUsers);
router.get('/bookings', protect, adminOnly, adminController.getAllBookings);
router.get('/cars', protect, adminOnly, adminController.getAllCars);
router.get('/report', protect, adminOnly, adminController.getReport);

// NEW ORDER ROUTES TO ADD
router.get('/orders', protect, adminOnly, adminController.getAllOrders);
router.put('/orders/:id/status', protect, adminOnly, adminController.updateOrderStatus);

module.exports = router;