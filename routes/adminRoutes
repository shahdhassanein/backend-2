// Route to get all cars (optional for admin dashboard)
router.get('/cars', async (req, res) => {
    try {
        const cars = await Car.find();
        res.json(cars);
    } catch (error) {
        res.status(500).json({ message: 'Failed to fetch cars' });
    }
});

