// Route to render admin panel (optional if used)
router.get('/', (req, res) => {
    res.render('admin', { title: 'Admin Page' });
});

// Route to add a car
router.post('/add-car', async (req, res) => {
    try {
        const { name, model, price, engine, color, image } = req.body;
        const newCar = new Car({ name, model, price, engine, color, image });
        await newCar.save();
        res.redirect('/admin');
    } catch (err) {
        console.error(err);
        res.status(500).send('Failed to save car');
    }
});

