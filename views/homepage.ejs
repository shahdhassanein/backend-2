        <div class="cookie-buttons">
            <button id="acceptCookiesBtn">Accept</button>
            <button id="denyCookiesBtn" class="deny-button">Deny</button>
        </div>
    </div>
    <!-- >>>>> END NEW COOKIE BANNER HTML <<<<< -->
 <script src="/js/homepage.js"></script>

