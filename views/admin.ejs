<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Admin Dashboard - Car Showroom</title>
  <link rel="stylesheet" href="/css/admin.css" />
</head>
<body>
  <div class="admin-container">
    <aside class="sidebar">
      <h2>Admin Panel</h2>
      <nav>
        <ul>
          <li class="active" data-tab="cars"><i class="fas fa-car"></i> Cars Management</li>
          <li><a href="/usersmangment"><i class="fas fa-users"></i> Users Management</a></li>
          <li id="logout"><i class="fas fa-sign-out-alt"></i> Logout</li>
        </ul>
      </nav>
    </aside>

    <main class="main-content">
      <header>
        <h2>Cars Management</h2>
        <div class="admin-info">
          <span id="admin-name"></span>
        </div>
      </header>

      <section id="cars" class="tab-content active">
        <div class="section-header">
          <a href="/addcar"><button class="add-btn" id="add-car-btn">Add New Car</button></a>

        <button class="add-btn" id="remove-car-btn">Remove Car</button>
          <button class="update-btn" id="update-car-btn">Update Car</a>
        </div>
        <!-- Update Car Modal -->
<div id="updatePopup" class="modal">
  <div class="modal-content">
    <span class="close-update">&times;</span>
    <h3>Update Car</h3>
    <form id="update-car-form">
      <input type="text" id="updateCarId" placeholder="Car ID" required />
      <input type="text" id="updateName" placeholder="New Name" />
      <input type="text" id="updateModel" placeholder="New Model" />
      <input type="number" id="updatePrice" placeholder="New Price" />
      <input type="text" id="updateEngine" placeholder="New Engine" />
      <input type="text" id="updateColor" placeholder="New Color" />
      <input type="text" id="updateImage" placeholder="New Image URL" />
      <button type="submit" class="update-btn">Update</button>
    </form>
    <p id="update-message" class="message"></p>
  </div>
</div>

        <div id="removePopup" class="modal">
  <div class="modal-content">
    <span class="close">&times;</span>
    <h3>Remove Car</h3>
    <form id="remove-car-form">
      <label for="carId">Enter Car ID:</label>
      <input type="text" id="carId" name="id" required />
      <button type="submit">Remove</button>
    </form>
    <p id="remove-message" class="message"></p>
  </div>
</div>

        <!-- Cars Inventory Grid -->
        <div class="cars-grid" id="cars-grid">
          <!-- Car cards will be rendered here dynamically by JS -->
        </div>
      </section>

      <section id="users" class="tab-content">
        <h2>Users Management</h2>
        <div class="users-list" id="users-list"></div>
      </section>

      <section id="orders" class="tab-content">
        <h2>Orders Management</h2>
        <div class="orders-list" id="orders-list"></div>
      </section>
    </main>
  </div>

  <!-- External JavaScript -->
  <script src="/js/admin.js"></script>
</body>
</html>
