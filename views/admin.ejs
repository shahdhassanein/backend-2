<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard - Car Showroom</title>
    <link rel="stylesheet" href="/css/admin.css">
</head>
<body>
    <div class="admin-container">
        <aside class="sidebar">
            <h2>Admin Panel</h2>
            <nav>
                <ul>
                    <li class="active" data-tab="cars"><i class="fas fa-car"></i> Cars Management</li>
                    <li data-tab="users"><i class="fas fa-users"></i> Users Management</li>
                   <li data-tab="orders"><i class="fas fa-shopping-cart"></i> Orders</li>
                    <li id="logout"><i class="fas fa-sign-out-alt"></i> Logout</li>
                </ul>
            </nav>
        </aside>
<!-- Orders Section -->
<section id="orders" class="content-section">
  <div class="section-header">
    <h2>Orders</h2>
  </div>
  <div class="orders-table">
    <table>
      <thead>
        <tr>
          <th>Order ID</th>
          <th>Customer</th>
          <th>Car</th>
          <th>Date</th>
          <th>Amount</th>
          <th>Status</th>
        </tr>
      </thead>
      <tbody id="orders-body">
        <!-- Orders will load here via JavaScript -->
      </tbody>
    </table>
  </div>
</section>
        <main class="main-content">
            <header>
                <h1>Cars Management</h1>
                <div class="admin-info">
                    <span id="admin-name"></span>
                </div>
            </header>

            <section id="cars" class="tab-content active">
                <div class="section-header">
                    <button class="add-btn" id="add-car-btn">Add New Car</button>
                       <button class="add-btn" id="add-car-btn">update Car</button>
                          <button class="add-btn" id="add-car-btn">Remove  Car</button>
                </div>
                <div class="cars-grid" id="cars-grid"></div>
            </section>

            <section id="users" class="tab-content">
                <h2>Users Management</h2>
                <div class="users-list" id="users-list"></div>
            </section>

            <section id="orders" class="tab-content">
                <h2>Orders Management</h2>
                <div class="orders-list" id="orders-list"></div>
            </section>

        </main>
    </div>
   <script src="/js/admin.js"></script>
   <script src="/js/admin-orders.js"></script>
</body>
</html>
