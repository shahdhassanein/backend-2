<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/admin.css" /> <!-- Use admin.css for styling -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <nav>
        <div class="navbar"> 
            <div class="logo">
                <h2 style="margin-left: 16px;">Car Showroom</h2> 
            </div>
            <ul>
                <li><a href="/">Home</a></li>
                <% if (user && user.role === 'admin') { %>
                    <li><a href="/admin" class="active">Admin Dashboard</a></li> <!-- Link back to full admin dashboard -->
                <% } %>
                <li><a href="/usersmangment">Users Management</a></li>
                <% if (user) { %>
                    <li><a href="/api/auth/logout">Logout</a></li>
                <% } else { %>
                    <li><a href="/login">Sign Up/Login</a></li>
                <% } %>
            </ul>
        </div>
    </nav>

    <div class="admin-container">
        <!-- Optional: A simplified sidebar if you want one, or just remove it -->
        <!-- For simplicity, I'm removing the sidebar to make it a direct content page -->

        <main class="main-content" style="margin-left: 0; padding-top: 20px;"> <!-- Adjust styling if no sidebar -->
            <header>
                <h2>Users Management</h2>
                <div class="admin-info">
                    <span id="admin-name"></span> <!-- Can still display admin name here -->
                </div>
            </header>

            <!-- Users Management Section - Copied from admin.ejs tab -->
            <section id="users" class="tab-content active"> <!-- Always active as it's the only section -->
                <div class="section-header">
                    <button class="add-btn" id="add-user-btn">Add New User</button>
                    <button class="remove-user-btn" id="remove-user-btn">Remove User</button>
                    <!-- Update User button is intentionally excluded as per previous request -->
                </div>

                <!-- Add User Modal -->
                <div id="addUserPopup" class="modal">
                    <div class="modal-content">
                        <span class="close-add-user">&times;</span>
                        <h3>Add New User</h3>
                        <form id="add-user-form">
                            <input type="text" id="addUserName" placeholder="Full Name" required />
                            <input type="email" id="addUserEmail" placeholder="Email" required />
                            <input type="tel" id="addUserPhone" placeholder="Phone Number" required />
                            <input type="password" id="addUserPassword" placeholder="Password (min 6 chars)" required minlength="6" />
                            <select id="addUserRole" required>
                                <option value="user">User</option>
                                <option value="admin">Admin</option>
                            </select>
                            <button type="submit" class="add-btn">Add User</button>
                        </form>
                        <p id="add-user-message" class="message"></p>
                    </div>
                </div>

                <!-- Remove User Modal -->
                <div id="removeUserPopup" class="modal">
                    <div class="modal-content">
                        <span class="close-remove-user">&times;</span>
                        <h3>Remove User</h3>
                        <form id="remove-user-form">
                            <label for="removeUserId">Enter User ID:</label>
                            <input type="text" id="removeUserId" name="id" placeholder="User ID" required />
                            <button type="submit">Remove</button>
                        </form>
                        <p id="remove-user-message" class="message"></p>
                    </div>
                </div>

                <!-- Users List Grid/Table -->
                <div class="users-list-container">
                    <table class="users-table">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Role</th>
                                <th>Created At</th>
                            </tr>
                        </thead>
                        <tbody id="users-table-body">
                            <!-- User rows will be rendered here dynamically by JS -->
                        </tbody>
                    </table>
                    <p id="users-list-message" class="message"></p>
                </div>
            </section>
        </main>
    </div>

    <!-- External JavaScript for admin functionality (needed for user management logic) -->
    <script src="/js/admin.js"></script>
    <script>
        // Ensure fetchUsers is called when this page loads
        document.addEventListener('DOMContentLoaded', () => {
            // Check if fetchUsers function exists (from admin.js)
            if (typeof fetchUsers === 'function') {
                fetchUsers();
            } else {
                console.error("fetchUsers function not found. Make sure admin.js is loaded correctly.");
            }
        });
    </script>
</body>
</html>