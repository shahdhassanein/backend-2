<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Car Gallery - User Dashboard</title>
    <link rel="stylesheet" href="/css/Dashboard.css"> 
    <script src="/js/Dashboard.js"></script> 
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body>
    <nav>
        <div class="navbar"> 
            <div class="logo">
                <h2 style="margin-left: 16px;">Car Showroom</h2> 
            </div>
            <ul>
                <li><a href="/" class="active">Home</a></li>
                <li><a href="/carllisting">Car Listings</a></li>
                <li><a href="/Dashboard">Dashboard</a></li> 
                <li><a href="/Contact">Contact</a></li>
                <% if (user) { %>
                    <li><a href="/api/auth/logout">Logout</a></li>
                <% } else { %>
                    <li><a href="/login">Sign Up/Login</a></li>
                <% } %>
                <li><a href="/mypurchases">My Purchases</a></li>
            </ul>
            <div class="cart-container">
                <button class="cart-text-button" onclick="window.location.href='/cart'">Cart</button>
            </div>
        </div>
    </nav>
    <div class="dashboard-container">
    
        <div class="sidebar">
            <div class="user-info">
                <div class="profile-img">
                    <img src="https://placehold.co/80x80/cccccc/333333?text=<%= user ? user.name.charAt(0).toUpperCase() : '?' %>" alt="User Profile">
                </div>
                <h3><%= user ? user.name : 'Guest User' %></h3>
                <p><%= user ? user.email : 'Not logged in' %></p>
                <p>Role: <%= user ? user.role : 'N/A' %></p>
                <% if (user && user.createdAt) { %>
                    <p>Member since: <%= new Date(user.createdAt).getFullYear() %></p>
                <% } else { %>
                    <p>Member since: N/A</p>
                <% } %>

                <% if (user && user.sessionInfo) { %>
                    <hr style="margin: 10px 0; border-color: #555;">
                    <p style="font-size: 0.8em; color: #ccc; margin-bottom: 5px;">**Session Details**</p>
                    <% if (user.sessionInfo.createdAt instanceof Date) { %>
                        <p style="font-size: 0.8em; color: #ccc;">Created: <%= user.sessionInfo.createdAt.toLocaleString() %></p>
                    <% } else { %>
                        <p style="font-size: 0.8em; color: #ccc;">Created: N/A</p>
                    <% } %>
                    <% if (user.sessionInfo.expiresAt instanceof Date) { %>
                        <p style="font-size: 0.8em; color: #ccc;">Expires: <%= user.sessionInfo.expiresAt.toLocaleString() %></p>
                    <% } else { %>
                        <p style="font-size: 0.8em; color: #ccc;">Expires: N/A</p>
                    <% } %>
                    <p style="font-size: 0.8em; color: #ccc;">Remaining: <%= user.sessionInfo.remainingMinutes || 'N/A' %> minutes</p>
                <% } %>
            </div>
            <nav class="nav-menu">
                <ul>
                    <li class="active" data-tab="profile-section"><i class="fas fa-user"></i> User Profile</li>
                    <li data-tab="activity-section"><i class="fas fa-history"></i> Activity History</li>
                    <li data-tab="personalization-section"><i class="fas fa-sliders-h"></i> Personalization</li>
                    <li><a href="#" style="color: inherit; text-decoration: none;"><i class="fas fa-car"></i> My Vehicles</a></li>
                    <li><a href="/api/auth/logout" style="color: inherit; text-decoration: none;"><i class="fas fa-sign-out-alt"></i> Logout</a></li>
                </ul>
            </nav>
        </div>

        <div class="main-content">
            <header>
                <div class="search-bar">
                    <input type="text" placeholder="Search for vehicles...">
                    <button><i class="fas fa-search"></i></button>
                </div>
                <div class="header-icons">
                    <div class="notification">
                        <i class="fas fa-bell"></i>
                        <span class="badge">3</span>
                    </div>
                    <div class="messages">
                        <i class="fas fa-envelope"></i>
                        <span class="badge">5</span>
                    </div>
                </div>
            </header>

            <section id="profile-section" class="dashboard-section active">
                <h2>User Profile</h2>
                
                <div class="card">
                    <div class="card-header">
                        <h3><i class="fas fa-id-card"></i> Personal Information</h3>
                        <button class="edit-btn" onclick="toggleEditMode()"><i class="fas fa-edit"></i> Edit</button>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label>Full Name</label>
                            <input type="text" id="name" value="<%= user ? user.name : '' %>" disabled>
                        </div>
                        <div class="form-row">
                            <div class="form-group">
                                <label>Email</label>
                                <input type="email" id="email" value="<%= user ? user.email : '' %>" disabled>
                            </div>
                            <div class="form-group">
                                <label>Phone</label>
                                <input type="tel" id="phone" value="<%= user ? user.phone : '' %>" disabled>
                            </div>
                        </div>
                        <div class="form-group">
                            <label>Address</label>
                            <input type="text" id="address" value="<%= user && user.address ? user.address : 'Not provided' %>" disabled>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h3><i class="fas fa-envelope"></i> Contact Preferences</h3>
                        <button class="edit-btn"><i class="fas fa-edit"></i> Edit</button>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label>Preferred Contact Method </label>
                            <select disabled>
                                <option selected>Email</option>
                                <option>Phone</option>
                                <option>Text Message</option>
                            </select>
                        </div>
                        <div class="toggle-container">
                            <div class="toggle-item">
                                <span>New Inventory Alerts</span>
                                <label class="switch">
                                    <input type="checkbox" checked disabled>
                                    <span class="slider"></span>
                                </label>
                            </div>
                            <div class="toggle-item">
                                <span>Price Drop Notifications</span>
                                <label class="switch">
                                    <input type="checkbox" checked disabled>
                                    <span class="slider"></span>
                                </label>
                            </div>
                            <div class="toggle-item">
                                <span>Promotional Offers</span>
                                <label class="switch">
                                    <input type="checkbox" disabled>
                                    <span class="slider"></span>
                                </label>
                            </div>
                            <div class="toggle-item">
                                <span>Newsletter</span>
                                <label class="switch">
                                    <input type="checkbox" checked disabled>
                                    <span class="slider"></span>
                                </label>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h3><i class="fas fa-lock"></i> Password & Security</h3>
                        <button class="edit-btn"><i class="fas fa-edit"></i> Edit</button>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" value="********" disabled>
                        </div>
                        <div class="toggle-container">
                            <div class="toggle-item">
                                <span>Two-Factor Authentication</span>
                                <label class="switch">
                                    <input type="checkbox" disabled>
                                    <span class="slider"></span>
                                </label>
                            </div>
                        </div>
                        <div class="login-history">
                            <h4>Recent Login Activity</h4>
                            <ul>
                                <li>
                                    <div class="device-info">
                                        <i class="fas fa-laptop"></i>
                                        <div>
                                            <p>Windows PC - Chrome</p>
                                            <small>Today, 10:34 AM</small>
                                        </div>
                                    </div>
                                    <span class="location">New York, USA</span>
                                </li>
                                <li>
                                    <div class="device-info">
                                        <i class="fas fa-mobile-alt"></i>
                                        <div>
                                            <p>iPhone - Safari</p>
                                            <small>Yesterday, 4:12 PM</small>
                                        </div>
                                    </div>
                                    <span class="location"></span>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h3><i class="fas fa-credit-card"></i> Payment Methods</h3>
                        <button class="edit-btn"><i class="fas fa-plus"></i> Add</button>
                    </div>
                    <div class="card-body">
                        <div class="payment-methods">
                            <div class="payment-card">
                                <div class="card-type visa">
                                    <i class="fab fa-cc-visa"></i>
                                </div>
                                <div class="card-details">
                                    <p>Visa ending in 4567</p>
                                    <small>Expires 05/2026</small>
                                </div>
                                <div class="card-actions">
                                    <button class="btn-small"><i class="fas fa-edit"></i></button>
                                    <button class="btn-small btn-delete"><i class="fas fa-trash"></i></button>
                                </div>
                            </div>
                            <div class="payment-card">
                                <div class="card-type paypal">
                                    <i class="fab fa-paypal"></i>
                                </div>
                                <div class="card-details">
                                    <p>PayPal</p>
                                    <small></small>
                                </div>
                                <div class="card-actions">
                                    <button class="btn-small"><i class="fas fa-edit"></i></button>
                                    <button class="btn-small btn-delete"><i class="fas fa-trash"></i></button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h3><i class="fas fa-shopping-cart"></i> Buying Preferences</h3>
                        <button class="edit-btn"><i class="fas fa-edit"></i> Edit</button>
                    </div>
                    <div class="card-body">
                        <div class="preference-group">
                            <div class="preference-item">
                                <span>Purchase Type</span>
                                <span class="preference-value">New Vehicles</span>
                            </div>
                            <div class="preference-item">
                                <span>Payment Method</span>
                                <span class="preference-value">Financing</span>
                            </div>
                            <div class="preference-item">
                                <span>Trade-in Interest</span>
                                <span class="preference-value">Yes</span>
                            </div>
                            <div class="preference-item">
                                <span>Preferred Dealerships</span>
                                <span class="preference-value">Downtown Motors, City Auto</span>
                            </div>
                            <div class="preference-item">
                                <span>Delivery Preference</span>
                                <span class="preference-value">Home Delivery</span>
                            </div>
                        </div>
                    </div>
                </div>
            </section>

            <section id="personalization-section" class="dashboard-section">
                <h2>Personalization Settings</h2>
                <div class="card">
                    <div class="card-body">
                        <p>Customize your dashboard experience here.</p>
                        </div>
                </div>
            </section>
        </div>
    </div>

    <script>
        // Ensure Dashboard.js contains the logic for tab switching
        // if it's not already inlined or handled by another script.
        // If your original Dashboard.js has this, keep it.
        // Otherwise, add this basic logic:
        document.addEventListener('DOMContentLoaded', function() {
            const navItems = document.querySelectorAll('.nav-menu li[data-tab]');
            const dashboardSections = document.querySelectorAll('.dashboard-section');

            // Function to activate a tab and show its section
            function activateTab(tabElement) {
                const sectionId = tabElement.dataset.tab;

                navItems.forEach(nav => nav.classList.remove('active'));
                tabElement.classList.add('active');

                dashboardSections.forEach(section => {
                    if (section.id === sectionId) {
                        section.classList.add('active');
                    } else {
                        section.classList.remove('active');
                    }
                });
            }

            // Add click listeners to navigation items
            navItems.forEach(item => {
                item.addEventListener('click', function() {
                    activateTab(this);
                });
            });

            // Initial activation of the default tab (e.g., 'profile-section')
            const initialTab = document.querySelector('.nav-menu li.active[data-tab]');
            if (initialTab) {
                activateTab(initialTab);
            }
        });

        // This function would be in Dashboard.js or directly in script tags
        function toggleEditMode() {
            const inputs = document.querySelectorAll('#profile-section .card-body input, #profile-section .card-body select');
            inputs.forEach(input => {
                input.disabled = !input.disabled;
            });
            // You might want to change the button text or icon here
            const editBtn = document.querySelector('#profile-section .edit-btn');
            if (editBtn.textContent.includes('Edit')) {
                editBtn.innerHTML = '<i class="fas fa-save"></i> Save';
            } else {
                editBtn.innerHTML = '<i class="fas fa-edit"></i> Edit';
            }
            // Add logic here to save changes to the backend if 'Save' is clicked
            if (!inputs[0].disabled) { // If inputs are now enabled (edit mode active)
                console.log("Edit mode activated. User can now edit profile.");
            } else {
                console.log("Edit mode deactivated. Changes should be saved.");
                // Here you would typically send an AJAX request to your backend
                // to update user information.
                // Example:
                // const name = document.getElementById('name').value;
                // const email = document.getElementById('email').value;
                // const phone = document.getElementById('phone').value;
                // fetch('/api/user/profile', { method: 'PUT', body: JSON.stringify({ name, email, phone }), headers: { 'Content-Type': 'application/json' } })
                //   .then(res => res.json())
                //   .then(data => console.log('Profile updated', data))
                //   .catch(err => console.error('Error updating profile', err));
            }
        }
    </script>
</body>
</html>
