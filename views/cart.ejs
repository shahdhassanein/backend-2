<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart</title>
    <link rel="stylesheet" href="/css/cart.css">
</head>
<body>
    <div class="background-image"></div>

    <nav>
        <div class="navbar">
            <div class="logo">
                <h2 style="margin-left: 16px;">Car Showroom</h2> 
            </div>
            <ul>
                <li><a href="/home">Home</a></li>
                <li><a href="/carlisting">Car Listings</a></li>
                <li><a href="/dashboard">Dashboard</a></li>
                <li><a href="/contact">Contact</a></li>
                <li><a href="/login">Sign Up/Login</a></li>
                <li><a href="/mypurchases">My Purchases</a></li>
            </ul>
            <div class="cart-container">
                <a href="/cart" class="cart-text-button">
                    Cart <span class="count"><%= cartItems.length %></span>
                </a>
            </div>
        </div>
    </nav>

    <a href="/home" class="back-button">â¬… Back</a>

    <div class="container">
        <div class="cart-header">
            <h1>Shopping Cart</h1>
            <a href="/carlisting">Continue Shopping</a>
        </div>

        <div class="cart-items" id="cart-items-container">
            <% if (cartItems.length === 0) { %>
                <div class="empty-cart-message">Your cart is empty</div>
            <% } else { %>
                <% let total = 0; %>
                <% cartItems.forEach(item => { %>
                    <% total += item.price; %>
                    <div class="cart-item">
                        <img src="<%= item.image %>" alt="<%= item.name %>" class="cart-image">
                        <div class="cart-info">
                            <h3><%= item.name %> <%= item.model %></h3>
                            <p>Engine: <%= item.engine %></p>
                            <p>Color: <%= item.color %></p>
                            <p>Price: $<%= item.price.toLocaleString() %></p>
                        </div>
                    </div>
                <% }); %>
            <% } %>
        </div>

        <div class="cart-summary">
            <h2>Order Summary</h2>
            <div class="summary-details">
                <p>Subtotal</p>
                <p class="subtotal-amount">$<%= total.toLocaleString() %></p>
            </div>
            <hr>
            <div class="summary-details">
                <p>Total</p>
                <p class="total-amount">$<%= total.toLocaleString() %></p>
            </div>
            <a href="../views/checkout.ejs" class="checkout-btn">Proceed to Checkout</a>
        </div>
    </div>
</body>
</html>
